{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2021",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "inlineSourceMap": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "scripts"
    ]
}
